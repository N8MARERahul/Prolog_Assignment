female(pam).
female(ann).
female(pat).
female(liz).
male(tom).
male(bob).
male(jim).
parent(pam,bob).
parent(tom,bob).
parent(bob,ann).
parent(bob,pat).
parent(pat,jim).
parent(tom,liz).
grand_parent(G,C):-
    parent(P,C),parent(G,P).
grand_children(C,G):-
    grand_parent(G,C).
common_parent(C1,C2):-
    parent(P,C1),parent(P,C2).
sister(S,E):-
    female(S),common_parent(S,E),S \= E.
mother(M,C):-
    female(M),parent(M,C).
father(F,C):-
    male(F),parent(F,C).
grand_father(G,C):-
    male(G),grand_parent(G,C).
